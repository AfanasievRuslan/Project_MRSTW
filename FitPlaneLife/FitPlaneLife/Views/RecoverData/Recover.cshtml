
@{
     Layout = "~/Views/Shared/_Layout_Blank.cshtml";
     ViewBag.Title = "Recover";
}
@model FitPlaneLife.Models.RecoverPasswordData

<div class="splash"> <div class="color-line"></div><div class="splash-title"><h1>Homer - Responsive Admin Theme</h1><p>Special Admin Theme for small and medium webapp with very clean and aesthetic style and feel. </p><div class="spinner"> <div class="rect1"></div> <div class="rect2"></div> <div class="rect3"></div> <div class="rect4"></div> <div class="rect5"></div> </div> </div> </div>

<div class="color-line"></div>

<div class="back-link">
     <a href="/Home/Index" class="btn btn-primary">Back to Dashboard</a>
</div>

<div class="login-container">
     <div class="row">
          <div class="col-md-12">
               <div class="text-center m-b-md">
                    <a href="/Home/Index" class="btn btn-primary"></a>
                    <p class="text-muted mb-4 mt-3">Enter your new Password.</p>
               </div>
               @Html.ValidationSummary(true)
               @using (Html.BeginForm("Recover", "Login", FormMethod.Post, new { @id = "RecoverForm" }))
               {
                    @Html.AntiForgeryToken()
                    <form action="/" novalidate id="LoginForm" method="post">

                         <div class="form-group mb-3">
                              @Html.LabelFor(m => m.Password, new { @class = "Password" })
                              @Html.TextBoxFor(m => m.Password, new
                         {
                              placeholder = "Password",
                              title = "Enter your Password",
                              name = "Password",
                              id = "password",
                              @class = "form-control"
                         })
                         </div>
                         <div class="form-group">
                              <label for="password">Repeat Password</label>
                              <input class="form-control" type="password" required id="repeat-password" placeholder="Repeat your Password" onblur="verificaParole()">
                         </div>
                         <button type="submit" class="mb-0 text-center btn btn-primary btn-block" href="#">Change Password</button>
                    </form>
               }
          </div>
     </div>
     <div class="row mt-3">
          <div class="col-12 text-center">
               <p class="text-muted"><a href="/Login/Login" class="text-primary font-weight-medium ml-1">Sign In</a></p>
          </div>
     </div>
</div>









