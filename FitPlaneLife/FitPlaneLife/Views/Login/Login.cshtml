
@{
     Layout = "~/Views/Shared/_Layout_Blank.cshtml";
     ViewBag.Title = "LogIn";
}
@model FitPlaneLife.Models.UserLogin

<div class="splash">
     <div class="color-line"></div><div class="splash-title">
          <h1>Homer - Responsive Admin Theme</h1>
          <p>Special Admin Theme for small and medium webapp with very clean and aesthetic style and feel. </p>
          <div class="spinner">
               <div class="rect1"></div> <div class="rect2"></div> <div class="rect3"></div>
               <div class="rect4"></div> <div class="rect5"></div>
          </div>
     </div>
</div>
<div class="color-line"></div>

<div class="back-link">
     <a href="/Home/Index" class="btn btn-primary">Back to Dashboard</a>
</div>

<div class="login-container">
     <div class="row">
          <div class="col-md-12">
               <div class="text-center m-b-md">
                    <h3>PLEASE LOGIN TO APP</h3>
               </div>
               <div class="hpanel">
                    <div class="panel-body">
                         @Html.ValidationSummary(true)
                         @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @id = "LoginForm" }))
                         {
                              @Html.AntiForgeryToken()
                              <form action="#" id="loginForm">
                                   <div class="form-group mb-3">
                                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Email, new
                                        {
                                             placeholder = "example@gmail.com",
                                             title = "Enter your email",
                                             value = "",
                                             name = "email",
                                             id = "username",
                                             @class = "form-control"
                                        })
                                   </div>
                                   <div class="form-group mb-3">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Password, new
                                   {
                                     placeholder = "password",
                                     title = "Enter your password",
                                     value = "",
                                     name = "email",
                                     id = "password",
                                     type = "password",
                                     @class = "form-control"
                                })
                                   </div>
                                   <div class="checkbox">
                                        <input type="checkbox" class="i-checks" checked>
                                        Remember login
                                        <p class="help-block small">(if this is a private computer)</p>
                                   </div>
                                   <button type="submit" class="btn btn-success btn-block" href="@Url.Action("Index", "Home")">Login</button>

                                   <a class="btn btn-default btn-block" href="/Register/Register">Register</a>
                              </form>
                         }
                    </div>
               </div>
               <div class="row mt-3">
                    <div class="col-12 text-center">
                         <p><a href="/RecoverData/RecoverData" class="text-primary ml-1">Forgot your password?</a></p>
                    </div>
               </div>
          </div>
     </div>
</div>
