@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin";

    var avatars = new List<string>
{
        "https://bootdey.com/img/Content/avatar/avatar1.png",
        "https://bootdey.com/img/Content/avatar/avatar2.png",
        "https://bootdey.com/img/Content/avatar/avatar3.png",
        "https://bootdey.com/img/Content/avatar/avatar4.png",
        "https://bootdey.com/img/Content/avatar/avatar5.png",
        "https://bootdey.com/img/Content/avatar/avatar6.png",
        "https://bootdey.com/img/Content/avatar/avatar7.png",
        "https://bootdey.com/img/Content/avatar/avatar8.png",
        "https://bootdey.com/img/Content/avatar/avatar9.png",
        "https://bootdey.com/img/Content/avatar/avatar10.png",
        "https://bootdey.com/img/Content/avatar/avatar11.png",
        "https://bootdey.com/img/Content/avatar/avatar12.png"
    };
    var random = new Random();
    
    avatars = avatars.OrderBy(a => random.Next()).ToList();

    var backgroundColors = new List<string>
{
        "https://via.placeholder.com/340x120/663399/000000?text=%20", 
        "https://via.placeholder.com/340x120/ff6347/000000?text=%20",
        "https://via.placeholder.com/340x120/4682b4/000000?text=%20", 
        "https://via.placeholder.com/340x120/32cd32/000000?text=%20", 
        "https://via.placeholder.com/340x120/ff69b4/000000?text=%20", 
        "https://via.placeholder.com/340x120/ffa500/000000?text=%20", 
        "https://via.placeholder.com/340x120/8a2be2/000000?text=%20",
        "https://via.placeholder.com/340x120/20b2aa/000000?text=%20", 
        "https://via.placeholder.com/340x120/ff4500/000000?text=%20", 
        "https://via.placeholder.com/340x120/ff8c00/000000?text=%20", 
        "https://via.placeholder.com/340x120/00ced1/000000?text=%20", 
        "https://via.placeholder.com/340x120/1e90ff/000000?text=%20" 
    };
    
    backgroundColors = backgroundColors.OrderBy(c => random.Next()).ToList();
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>

<div class="container">
    <div class="main-body">

        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                <li class="breadcrumb-item active" aria-current="page">User Grid</li>
            </ol>
        </nav>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 gutters-sm">
            @for (int i = 0; i < 12; i++)
            {
                var avatar = avatars[i % avatars.Count];
                var backgroundColor = backgroundColors[i % backgroundColors.Count];
                <div class="col mb-3">
                    <div class="card">
                        <img src="@backgroundColor" alt="Cover" class="card-img-top">
                        <div class="card-body text-center">
                            <img src="@avatar" style="width:100px;margin-top:-65px" alt="User" class="img-fluid img-thumbnail rounded-circle border-0 mb-3">
                            <h5 class="card-title">John Doe</h5>
                            <p class="text-secondary mb-1">Full Stack Developer</p>
                            <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-light btn-sm bg-white has-icon btn-block" type="button"><i class="material-icons">add</i>Follow</button>
                            <button class="btn btn-light btn-sm bg-white has-icon ml-2" type="button"><i class="fas fa-trash"></i></button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
