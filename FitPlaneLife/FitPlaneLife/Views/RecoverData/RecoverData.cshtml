
@{
     Layout = "~/Views/Shared/_Layout_Blank.cshtml";
     ViewBag.Title = "RecoverData";
}
@model FitPlaneLife.Models.RecoverPasswordData

<div class="splash">
     <div class="color-line"></div>
     <div class="splash-title">
          <h1>Homer - Responsive Admin Theme</h1>
          <div class="spinner">
               <div class="rect1"></div>
               <div class="rect2"></div>
               <div class="rect3"></div>
               <div class="rect4"></div> <div class="rect5">
               </div>
          </div>
     </div>
</div>

<div class="color-line"></div>

<div class="back-link">
     <a href="/Home/Index" class="btn btn-primary">Back to Dashboard</a>
     <p class="text-muted mb-4 mt-3">Enter your email address and username to recover your password.</p>
</div>

<div class="login-container">
     <div class="row">
          <div class="col-md-12">
               <div class="text-center m-b-md">
               </div>
               <div class="hpanel">
                    <div class="panel-body">
                         @Html.ValidationSummary(true)
                         @using (Html.BeginForm("RecoverData", "Login", FormMethod.Post, new { @id = "RecoverDataForm" }))
                         {
                              @Html.AntiForgeryToken()
                              <form action="/" novalidate id="LoginForm" method="post">

                                   <div class="form-group mb-3">
                                        @Html.LabelFor(m => m.Email, new { @class = "emailadress" })
                                        @Html.TextBoxFor(m => m.Email, new
                                   {
                                        placeholder = "example@gmail.com",
                                        title = "Enter your email",
                                        value = "",
                                        name = "email",
                                        id = "emailaddress",
                                        @class = "form-control"
                                   })
                                   </div>

                                   <div class="form-group mb-3">
                                        @Html.LabelFor(m => m.Username, new { @class = "username" })
                                        @Html.TextBoxFor(m => m.Username, new
                                   {
                                        placeholder = "username",
                                        title = "Enter your username",
                                        value = "",
                                        name = "username",
                                        id = "username",
                                        @class = "form-control"
                                   })
                                   </div>
                                   <button type="submit" class="mb-0 text-center btn btn-primary btn-block" href="#">Next</button>
                              </form>
                         }
                    </div>
               </div>
               <div class="row mt-3">
                    <div class="col-12 text-center">
                         <p class="text-muted"><a href="/Login/Login" class="text-primary font-weight-medium ml-1">Sign In</a></p>
                    </div>
               </div>
          </div>
     </div>
</div>



