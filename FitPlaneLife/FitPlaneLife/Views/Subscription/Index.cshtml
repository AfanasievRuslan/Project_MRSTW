@model IEnumerable<FitPlaneLife.Domain.Entities.User.Subscription>

<!DOCTYPE html>
<html>
<head>
    <title>Subscriptions</title>
</head>
<body>
    <h1>Subscriptions</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Duration (Months)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscription in Model)
            {
                <tr>
                    <td>@subscription.Name</td>
                    <td>@subscription.Description</td>
                    <td>@subscription.Price</td>
                    <td>@subscription.Duration</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center my-3">
        <a href="@Url.Action("CreateMonthlySubscription", "Subscription")" class="btn btn-primary mx-2">Create Monthly Subscription</a>
        <a href="@Url.Action("CreateQuarterlySubscription", "Subscription")" class="btn btn-primary mx-2">Create Quarterly Subscription</a>
        <a href="@Url.Action("CreateHalfYearlySubscription", "Subscription")" class="btn btn-primary mx-2">Create Half Yearly Subscription</a>
    </div>
</body>
</html>
